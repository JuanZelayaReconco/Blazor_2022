@page "/Productos"

<AuthorizeView Roles="Administrador">

    <Authorized Context="AuthenticationState">
        <h3>Lista de Productos</h3>

        <!--Botón para ir al formulario para agregar un usuario.-->
        <div class="form-group row">
            <div class="col-sm-10">
                <a href="/Productos/Nuevo" class="btn btn-primary m-1">Nuevo Producto</a>
            </div>
        </div>

        <!--Los simbolos "<!--" y "- -> (unidos)" para comentar-->
        @if(listaProductos == null)
        {
            <p>No hay productos registrados</p>
        }
        else
        {
            <table class="table">
                <thead> <!--Tabla-->
                    <tr> <!--Fila-->
                        <th>Código</th> <!--Columna-->
                        <th>Descripción</th>
                        <th>Existencias</th>
                        <th>Precio L.</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach(var producto in listaProductos)
                    {
                        <tr>
                            <td>@producto.Codigo</td> <!--"td" para llenar la tabla con registros-->
                            <td>@producto.Descripcion</td>
                            <td>@producto.Existencias</td>
                            <td>@producto.Precio</td>
                            <!--Botón para editar usuarios-->
                            <th>
                                <a class="btn btn-success" href="@($"/Productos/Editar/{producto.Codigo}")">Editar</a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </Authorized>

</AuthorizeView>