@page "/Productos/Editar/{Codigo}"

<AuthorizeView Roles="Administrador">

    <Authorized Context="AuthenticationState">
        <h3>Editar Producto</h3>
        <br /> <!--En HTML se usa para dar un salto de linea-->
        <EditForm Model="@product">
            <DataAnnotationsValidator/>
            <div class="form-group row">
                <label for="Codigo" class="col-sm-2 col-form-label">
                    Código:
                </label>
                <div class="col-sm-10">
                    <label for="Codigo" class="form-control">
                        @product.Codigo
                    </label>
                </div>
            </div>

            <!--"row" se usa para las filas y "col" para columnas (un row ocupa 12 columnas)-->

            <div class="form-group row">
                <label for="Descripcion" class="col-sm-2 col-form-label">
                    Descripción:
                </label>
                <div class="col-sm-10">
                    <InputText id="Descripcion" class="form-control" @bind-Value="product.Descripcion"/>
                    <ValidationMessage For="@(() => product.Descripcion)" />
                </div>
            </div>

            <div class="form-group row">
                <label for="Existencias" class="col-sm-2 col-form-label">
                    Existencias:
                </label>
                <div class="col-sm-10">
                    <InputNumber id="Existencias" class="form-control" @bind-Value="product.Existencias"/>
                </div>
            </div>

            <div class="form-group row">
                <label for="Precio" class="col-sm-2 col-form-label">
                    Precio: L.
                </label>
                <div class="col-sm-10">
                    <InputNumber class="form-control" @bind-Value="product.Precio"/>
                </div>
            </div>

            <!--Creación de botones "Guardar", "Cancelar" y "Eliminar".-->
            <div class="form-group row">
                <p>
                    <input type="submit" class="btn btn-primary" value="Guardar" @onclick="Guardar" />
                    <!--El evento "onclick" funciona igual que el evento "click" de los botones de WinForm-->
                    <input type="submit" class="btn btn-danger" value="Cancelar" @onclick="Cancelar" />
                    <input type="submit" class="btn btn-warning" value="Eliminar" @onclick="Eliminar" />
                </p>
            </div> 
        </EditForm>
    </Authorized>

</AuthorizeView>